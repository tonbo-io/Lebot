{
    "display_information": {
        "name": "lebot",
        "description": "Lebot is an assistant.",
        "background_color": "#222623"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": false,
            "messages_tab_enabled": true,
            "messages_tab_read_only_enabled": false
        },
        "bot_user": {
            "display_name": "lebot",
            "always_online": false
        },
        "assistant_view": {
            "assistant_description": "Hi, I'm lebot."
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "assistant:write",
                "channels:join",
                "im:history",
                "channels:history",
                "groups:history",
                "chat:write",
                "users:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "assistant_thread_context_changed",
                "assistant_thread_started",
                "message.im"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": true,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}
